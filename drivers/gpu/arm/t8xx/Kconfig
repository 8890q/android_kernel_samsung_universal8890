config DDK_VERSION_OS
	string "version"
	default ANDROID_MAJOR_VERSION
	help
		Android OS major version

menuconfig MALI_T8XX
	tristate "Mali-T8XX support"
	default y
	help
	  Enable this option to build support for the ARM Mali-T7xx GPU.

	  To compile this driver as a module, choose M here:
	  this will generate a single module, called mali_kbase.

choice
	prompt "version Configuration"
	depends on MALI_T8XX
	default MALI_R12P0 if DDK_VERSION_OS = "m"
	default MALI_R15P0 if DDK_VERSION_OS = "n"
	default MALI_R22P0 if DDK_VERSION_OS = "o"
	default MALI_R28P0 if DDK_VERSION_OS = "p"
	help
	  Select the gpu support version.

config MALI_R7P0
	depends on MALI_T8XX
	bool "r7p0 driver"

config MALI_R9P0
	depends on MALI_T8XX
	bool "r9p0 driver"

config MALI_R12P0
	depends on MALI_T8XX
	bool "r12p0 driver"

config MALI_R15P0
	depends on MALI_T8XX
	bool "r15p0 driver"

config MALI_R22P0
	depends on MALI_T8XX
	bool "r22p0 driver"

config MALI_R28P0
	depends on MALI_T8XX
	bool "r28p0 driver"

endchoice
	

if MALI_R7P0
	source "drivers/gpu/arm/t8xx/r7p0/Kconfig"
endif

if MALI_R9P0
	source "drivers/gpu/arm/t8xx/r9p0/Kconfig"
endif

if MALI_R12P0
	source "drivers/gpu/arm/t8xx/r12p0_m/Kconfig"
endif

if MALI_R15P0
	source "drivers/gpu/arm/t8xx/r15p0/Kconfig"
endif

if MALI_R22P0
	source "drivers/gpu/arm/t8xx/r22p0/Kconfig"
endif

if MALI_R28P0
	source "drivers/gpu/arm/t8xx/r28p0/Kconfig"
endif
